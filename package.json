{
    "name": "microvasm",
    "displayName": "MicroVASM",
    "description": "Syntax Highlighting for the MicroVASM language.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.59.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "microvasm",
                "aliases": [
                    "MicroVASM",
                    "microvasm"
                ],
                "extensions": [
                    ".vasm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "microvasm",
                "scopeName": "main.vasm",
                "path": "./syntaxes/microvasm.tmLanguage.json"
            }
        ],
        "iconThemes": [
            {
                "id": "MicroVASM Icon",
                "label": "MicroVASM",
                "path": "./iconDefinitions.json"
            }
        ]
    },
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.32.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "eslint": "^7.21.0",
        "typescript": "^4.3.5"
    }
}
